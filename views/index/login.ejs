<div class="container">
    <div class="row vh-100">
        <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
            <div class="d-table-cell align-middle">

                <div class="text-center mt-4">
                    <h1 class="h2">Welcome back</h1>
                    <p class="lead">
                        Sign in to your account to continue
                    </p>
                </div>

                <div class="card">
                    <div class="card-body">
                        <div class="m-sm-4">
                            <div class="text-center">
                                <img src="/img/user.png" alt="Charles Hall" class="img-fluid rounded-circle" width="132" height="132">
                            </div>
                            <form style="background-color: white" id="login-form" method="post" action="/login">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <% if(isError) { %>
                                <div class="alert alert-danger" id="wrong1" role="alert">
                                    Username or password <strong> is Wrong!</strong>
                                </div>
                                <% } %>
                                <div class="mb-3">
                                    <label class="form-label">Username / Email</label>
                                    <input type="email" class="form-control" name="username" id="username" placeholder="Email" required autofocus>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Password</label>
                                    <input type="password" class="form-control" name="password" id="password"  placeholder="Password" required autofocus>
                                    <small>
                                        <a href="/forgot">Forgot password?</a>
                                    </small>
                                </div>
                                <div>
                                    <label class="form-check">
                                        <input class="form-check-input" type="checkbox" value="remember-me" name="remember-me" checked="">
                                        <span class="form-check-label">
                                          Remember me next time
                                        </span>
                                    </label>
                                </div>
                                <div class="text-center mt-3">

                                    <div class="row" style="text-vertical-align:top;">
                                        <div class="col-lg-2"></div>
                                        <div class="col-lg-3 col-sm-12">
                                            <button type="submit" class="btn btn-lg btn-primary ">Sign in</button>
                                        </div>
                                        <div class="col-lg-1 col-sm-12">OR</div>
                                        <div class="col-lg-5 col-sm-12">
                                            <div id="google-sign-in" class="" onclick="location.href='/auth/google'"></div>
                                        </div>
                                    </div>

                                </div>
                            </form>
                        </div>


                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


<p></p>