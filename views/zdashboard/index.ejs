<div class="row well" xmlns="http://www.w3.org/1999/html">
    <div class="col-lg-12">
        <h1 class="page-header">Dashboard</h1>
        <small><%- companyName %></small>

    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="card">
    <div class="card-body">
        <p>Dashboard</p>
    </div>
</div>


<div class="row" data-masonry='{"percentPosition": true }'>
    <% servers.forEach(function (item) { %>
    <div class="col-md-6 py-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%- item.title%></h5>
                <a href="http://<%- item.host%>" target="_blank"><%- item.host%></a>
                <!--
        <button class="btn btn-info btn-sftp" data-serverId="<%- item.id%>">SFTP</button>
-->
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <td>#</td>
                        <td>Service Name</td>
                        <td>Status</td>
                    </tr>
                    </thead>
                    <tbody>
                    <% var no = 1;%>
                    <% if(services[item.id]) {
                    services[item.id].forEach(function (result) {
                    %>
                    <tr>
                        <td><%- no%>. </td>
                        <td><%- result.title%></td>
                        <td><%- result.status  == 1 ? `<i class="fas fa-power-off btn-success boxy btn-rounded"></i>` : `<i class="fas fa-power-off btn-danger boxy btn-rounded"></i>`%></td>
                    </tr>
                    <% no++; }) }%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <% })%>
</div>

<div class="modal" id="modalssh" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Result Scripts</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body contenssh">
                <p>Modal body text goes here.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>